@model MedicalOffice.Models.Appointment

@{
    ViewData["Title"] = "Remove Appointment";
}

<h2>Remove Appointment for Patient: @Model.Patient.FullName</h2>

<h3>Are you sure you want to delete this Appointment?</h3>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.appDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.appDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.extraFee)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.extraFee)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ApptReason)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApptReason.ReasonName)
        </dd>
    </dl>

    <form asp-action="Remove">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="PatientAppt" asp-route-PatientID="@Model.PatientID">Back to Patient</a>
    </form>
</div>