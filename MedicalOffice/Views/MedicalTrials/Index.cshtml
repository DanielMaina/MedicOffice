@model IEnumerable<MedicalOffice.Models.MedicalTrial>

@{
    ViewData["Title"] = "Index";
}

<h1>Medical Trial Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrialName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TrialName)
                </td>
                <td>
                    <a asp-action="Notification" asp-route-id="@item.ID" asp-route-TrialName="@item.TrialName">Send Email Notificaiton</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Lookups" asp-route-Tab="MedicalTrialsTab">Maintain Trials</a>
</div>